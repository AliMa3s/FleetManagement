<Window x:Class="FleetManagement.WPF.BevestigingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FleetManagement.WPF"
        mc:Ignorable="d"
        Title="BevestigingWindow" Height="200" Width="250">
    <Grid Background="LightSteelBlue">

        <Button x:Name="JaVerwijder" Content="_Ja" Background="#FFCAD5EA" VerticalAlignment="Top" Height="36" Margin="33,48,0,0" Width="86" DockPanel.Dock="Right" HorizontalAlignment="Left" Grid.Row="1" Click="JaVerwijder_Click"/>
        <Button x:Name="VerwijderNiet" Content="_Neen" Background="#FFCAD5EA" VerticalAlignment="Top" Height="36" Margin="141,48,0,0" Width="86" DockPanel.Dock="Right" HorizontalAlignment="Left" Grid.Row="1" Click="VerwijderNiet_Click"/>
        <Label Background="CornflowerBlue" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="0" Margin="0,0,0,0" FontWeight="Bold">Bevestig verwijderen:</Label>

        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>

    </Grid>
</Window>
