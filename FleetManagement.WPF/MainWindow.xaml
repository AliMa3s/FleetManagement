<Window x:Class="FleetManagement.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FleetManagement.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="autoTypes" HorizontalAlignment="Left" Margin="47,100,0,0" SelectedIndex='-1' VerticalAlignment="Top" Width="120" SelectionChanged="AutoTypes_SelectionChanged" />
        <TextBlock x:Name="autoGeslecteerd" HorizontalAlignment="Left" Margin="187,100,0,0" Text="{Binding ElementName=autoTypes, Path=SelectedItem, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="131"/>
        <Label Content="Eerste dropdown met binding om even te testen:" HorizontalAlignment="Left" Margin="43,65,0,0" VerticalAlignment="Top" Width="427"/>
    </Grid>
</Window>
